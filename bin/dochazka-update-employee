#!/bin/bash
if [ $# -eq 0 ]
then
    echo "Please supply the nick of the employee you wish to update"
    exit
fi 

NICK=$1
SERVER="https://root:immutable@dochazka-devel.suse.cz/"
TMPFILE="/tmp/$(basename $0).$$.tmp"

curl --insecure -X GET -H 'Accept: application/json' $SERVER/employee/$1 >$TMPFILE
vim $TMPFILE
curl --insecure -X PUT -H 'Content-Type: application/json' $SERVER/employee/eid -d - <$TMPFILE
